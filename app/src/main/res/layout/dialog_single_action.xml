<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B8383838">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/success_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/corner_radius_secondary_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/activity_text_padding">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img_bf_better_life"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:src="@drawable/ic_alert_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_success"
                    style="@style/AssetManagerPrimaryText_HeadingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text=""
                    android:textColor="@color/BG_blue"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_bf_better_life" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_success_message"
                    style="@style/AssetManagerSecondaryText"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/cardview_margin_top"
                    android:layout_marginTop="@dimen/margin_top_within_view"
                    android:layout_marginEnd="@dimen/cardview_margin_top"
                    android:gravity="center"
                    android:text="@string/you_have_taken_the_asset_picture_successfully"
                    android:textColor="@color/BG_blue_darker"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_success" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:width="@dimen/secondary_button_width"
                    android:height="@dimen/secondary_button_height"
                    android:backgroundTint="@color/white"
                    android:text="@string/_ok"
                    android:textColor="@color/BG_blue"
                    app:cornerRadius="@dimen/corner_radius_secondary_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_success_message"
                    app:strokeColor="@color/BG_blue"
                    app:strokeWidth="@dimen/standard_stroke_width" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
